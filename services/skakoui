apiVersion: kustomize.toolkit.fluxcd.io/v1beta2
kind: Kustomization
metadata:
  name: skakoui
  namespace: flux-system
spec:
  interval: 5m
  prune: true
  sourceRef:
    kind: GitRepository
    name: kustomizations
  path: ./kustomizations/service
  postBuild:
    substitute:
      name: skakoui
      image: skakoui
      tag: latest # {"$imagepolicy": "flux-system:skakoui:tag"}